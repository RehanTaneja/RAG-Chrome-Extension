{
  "manifest_version": 3,
  "name": "Clipboard Text Listener",
  "version": "1.0",
  "description": "Captures copied text and shows it in the popup.",
  "permissions": ["storage", "scripting", "activeTab", "clipboardRead"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
