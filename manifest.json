{
  "manifest_version": 3,
  "name": "PDF Text Extractor",
  "version": "1.0",
  "description": "Extract text from PDFs",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [{
    "resources": ["pdf-inject.js"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }]
}
