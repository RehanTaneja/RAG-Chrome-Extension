{
  "manifest_version": 3,
  "name": "PDF Text Extractor",
  "version": "1.0",
  "description": "Extract text from PDFs",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PDF Text Extractor"
  },
  "background": {
    "service_worker": "background.js"
  }
}
