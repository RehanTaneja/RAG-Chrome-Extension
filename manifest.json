{
  "manifest_version": 3,
  "name": "PDF Clipboard Listener",
  "version": "1.0",
  "description": "Detects copied text in PDFs and shows it in the popup.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
